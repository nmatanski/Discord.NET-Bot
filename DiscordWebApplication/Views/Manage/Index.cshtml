
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var username = ViewData["UserName"];
    var role = ViewData["Role"];
}

<h2>Index</h2>

<style>
    a {
        text-decoration: none !important;
    }

    ul > li {
        list-style: none !important;
    }
</style>
<div style="text-align:center;">
    <h1 style="color: #c0a16b">
        <b>Welcome back, @username @role</b>
    </h1>
    <h4 style="color: #c0a16b">
        <b>This is your personal profile page</b>
    </h4>
    <hr>
    <div class="row">
        <div class="col-md-3" style="text-align:left">
            <ul>
                @if (role.ToString() != "User"
&& role.ToString() != "Superuser"
&& role.ToString() != "Admin")
                {
                    <li> <a asp-area="" asp-controller="" asp-action="">User request</a></li>
                    <li> <a asp-area="" asp-controller="" asp-action="">Superuser request</a></li>
                }
                @if (role.ToString() == "Admin")
                {
                    <li> <a asp-area="" asp-controller="" asp-action="">All Users</a></li>
                    <li><a asp-area="" asp-controller="" asp-action="">All Exceptions</a></li>
                }
                <br />
                @if (role.ToString() == "User")
                {
                    <li> <a asp-area="" asp-controller="ITGigs" asp-action="Create">Create new ITGig event</a></li>

                }
                @if (role.ToString() == "SuperUser")
                {
                    <li> <a asp-area="" asp-controller="Venues" asp-action="Create">Create new Venue</a></li>

                }
                <li> <a asp-area="" asp-controller="" asp-action="">Set new password</a></li>
                <li><a asp-area="" asp-controller="" asp-action="">Edit profile</a></li>
            </ul>
        </div>
        <div class="col-md-9">
            <h4  style="color: #c0a16b">
                <b>You don't have any activity yet!</b>
                <br />
                <br />
                <img src="../images/no-activities.jpg" />
            </h4>
        </div>
    </div>
</div>